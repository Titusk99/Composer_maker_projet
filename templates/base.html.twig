<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
        <style>
            nav ul {
                list-style-type: none;
                margin: 0;
                padding: 0;
                display: flex;
                gap: 20px;
            }
            nav ul li {
                display: inline;
            }
            footer {
                margin-top: 50px;
                padding: 20px 0;
                border-top: 1px solid #ccc;
                text-align: center;
            }
            footer a {
                margin: 0 15px;
            }
        </style>
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <nav>
            <ul>
                <li><a href="{{ path('app_accueil') }}">Accueil</a></li>
                
                {% if app.user %}
                    <li><a href="{{ path('app_game_index') }}">Les Jeux</a></li>
                    <li><a href="{{ path('app_game_new') }}">Ajouter un jeu</a></li>
                    <li><a href="{{ path('app_profile') }}">Mon Profil</a></li>
                    <li><a href="{{ path('app_logout') }}">Déconnexion ({{ app.user.userIdentifier }})</a></li>
                {% else %}
                    <li><a href="{{ path('app_login') }}">Connexion</a></li>
                    <li><a href="{{ path('app_register') }}">Inscription</a></li>
                {% endif %}
            </ul>
        </nav>
        
        <hr>
        
        {% block body %}{% endblock %}
        
        <footer>
            <a href="{{ path('app_contact') }}">Contact</a>
            <a href="{{ path('app_legal') }}">Mentions légales</a>
        </footer>
    </body>
</html>
